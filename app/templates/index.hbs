{{#if session.isAuthenticated}}
  Logged in as {{session.currentUser.displayName}}
  {{#link-to 'session.destroy' tagName='button'}}Sign out{{/link-to}}
  {{outlet}}
{{else}}
    <div class='page-header'>  
        <h1>You must be signed in to use this app</h1>
    </div>  
    <div class='list-group'>  
        {{#link-to 'user.signup' class='list-group-item'}}
            Sign Up
        {{/link-to}}
        {{#link-to 'session.new' class='list-group-item'}}
            Sign In
        {{/link-to}}
    </div>
{{/if}}
